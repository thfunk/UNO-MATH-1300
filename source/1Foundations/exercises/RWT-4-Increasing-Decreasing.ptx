<exercises label="RWT-Increasing-Decreasing">
    <title>Read-Watch-Try</title>
    <introduction>
        <video label="RWT1.4-Increasing-Decreasing" source="RWT1.4-Increasing-Decreasing.mp4"/>
    </introduction>

    <!-- Question 1 -->

    <exercise label="RWT-Increasing-Decreasing-exercise1">
        <statement>
            <p>
                The graph of the function <m>g(x)</m> is shown below. On what interval or intervals is <m>g(x)</m> increasing?
            </p>
            <image width="60%">
            <prefigure xmlns="https://prefigure.org" label="RWT-Increasing-Decreasing-prefigure1">
                <diagram dimensions="(300,300)" margins="5">
                <definition>f(x)=-(x-1)^2+2</definition>
                <coordinates bbox="(-2,-3,4,3)">
                <grid-axes xlabel="x" ylabel="y"/>
                <graph function="f"/>
                </coordinates>
                </diagram>
            </prefigure>
            </image>
        </statement>
        <choices>
            <choice>
                <statement>
                <p><m>(1, \infty)</m></p>
                </statement>
            </choice>
            <choice correct="yes">
                <statement>
                <p><m>(-\infty, 1)</m></p>
                </statement>
            </choice>
            <choice>
                <statement>
                <p><m>[1, \infty)</m></p>
                </statement>
            </choice>
            <choice>
                <statement>
                <p><m>(-\infty, 1]</m></p>
                </statement>
            </choice>
        </choices>
    </exercise>

