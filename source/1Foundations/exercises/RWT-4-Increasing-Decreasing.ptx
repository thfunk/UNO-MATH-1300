    <!-- Question 3 -->

    <exercise label="RWT-Increasing-Decreasing-exercise3">
        <statement>
            <p>
                The graph of the function <m>f(x)</m> is shown below. On what interval or intervals is <m>g(x)</m> increasing?
            </p>
            <image width="60%">
            <prefigure xmlns="https://prefigure.org" label="RWT-Increasing-Decreasing-prefigure3">
                <diagram dimensions="(300,300)" margins="5">
                <definition>f(x)=1/8.25*(x+3.5)*x*(x-3.5)</definition>
                <definition>a = 1</definition>
                <coordinates bbox="(-5,-5,5,5)">
                <grid-axes xlabel="x" ylabel="y"/>
                <graph function="f"/>
                </coordinates>
                </diagram>
            </prefigure>
            </image>
        </statement>
        <choices>
            <choice>
                <statement>
                <p><m>(-\infty, -2)</m></p>
                </statement>
            </choice>
            <choice correct="yes">
                <statement>
                <p><m>(-\infty, -2)\cup(2,\infty)</m></p>
                </statement>
            </choice>
            <choice>
                <statement>
                <p><m>(2, \infty)</m></p>
                </statement>
            </choice>
            <choice>
                <statement>
                <p><m>(-2, 2)</m></p>
                </statement>
            </choice>
        </choices>
    </exercise>

